configuration {
    modi: "drun,run,emoji,window";
    combi-modi: "drun,run,emoji,window";
    disable-history: true;
    hide-scrollbar: true;
    font: "Roboto Medium 11";

    icon-theme: "Papirus-Dark";

    terminal: "alacritty";
    drun-display-format: "{icon}  {name}";
    separator-style: "solid";

    display-run:	"❯";
    display-drun:	"";
    display-window: "";
    display-emoji:  "";
 }

 @theme "themes/nord.rasi"
